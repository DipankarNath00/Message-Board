<!DOCTYPE html>
<html lang="en">
    <%-include("./partials/head.ejs")%>
<body>
    <%- include('./partials/nav.ejs')%>
    <div class="blogs content">

    <% if(messages.length>0){%>
        <% messages.forEach(message=>{%>
            <a class="single" href="/<%=message.id%>">
                <p class="user"name="user"><%=message.user%></p>
                <p class="textMessage" name="textMessage"><%=message.text%></p>
            </a>
                
   <% })}else{%>
        <p class="textMessage" name="textMessage">Please create a message!!</p>
   <%}%>
</div>

</body>
</html>